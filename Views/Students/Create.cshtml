@model Asp.net_student.Models.Student

@{
    ViewData["Title"] = "Create";
}



<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>stud</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">


            @using (Html.BeginForm("Create", "Students", FormMethod.Post))
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                  
                    <label asp-for="Name" class="control-label">Name</label>
                    @Html.TextBoxFor(m => m.Name,
new { @class = "form-control", placeholder = "name", required = "required" })
                </div>
                <div class="form-group">
                
                    <label asp-for="Age" class="control-label">Age</label>
                    <input asp-for="Age" class="form-control" placeholder="Enter Age" type="number" required="required" min="18" max="60" />

                </div>

                <div class="form-group">
                    <label asp-for="DepartmentId" class="control-label">DepartmentId</label>

                    @Html.TextBoxFor(m => m.DepartmentId,
new { @class = "form-control", placeholder = "DepartmentId", required = "required", type = "number" })
                </div>
                

                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                
                     @Html.TextBoxFor(m => m.Email,
new { @class = "form-control", placeholder = "Email", required = "required", type = "Email" })
                </div>
                
                <div class="form-group">
              
                    <label asp-for="Phone" class="control-label">Phone</label>
                    <input asp-for="Phone"  type="text" class="form-control" placeholder="Phone..." pattern="[1-9]{1}[0-9]{9}" required="required" />
                </div>

                <div class="form-group">
                    <label asp-for="Gender" class="control-label">Gender</label>

                    <div class="col-md-10">

                        <input type="radio" name="Gender" value="Male" required="required" />Male

                        <input type="radio" name="Gender" value="Female" />Female

                    </div>
                </div>
                <div class="form-group">

                    <label asp-for="country" class="control-label">country</label>

                    <select asp-for="country" class="form-control" placeholder="country" type="number" required="required">
                        <option value="">Pick one</option>
                        <option value="India">India</option>
                        <option value="Australia">Australia</option>
                        <option value="America">America</option>
                        <option value="china">China</option>
                        <option value="Japan">Japan</option>
                        <option value="Russia">Russia</option>
                        <option value="England">England</option>
                        <option value="Korea">Korea</option>
                        <option value="Nz">New Zealand</option>
                        <option value="South Africa">South Africa</option>
                        <option value="West Indies">West Indies</option>
                        <option value="Brazil">Brazil</option>
                        <option value="Holland">Holland</option>
                        <option value="Bahrain">Bahrain</option>
                        <option value="Canada">Canada</option>
                        <option value="Colombia">Colombia</option>
                        <option value="France">France</option>
                        <option value="19">Germany</option>

                    </select>
                </div>


                <div class="form-group">

                    <label asp-for="EnrollmentDate" class="control-label">Enrollementdate</label>
                    <input asp-for="EnrollmentDate" class="form-control" required="required" placeholder="Enter Departmentid" type="date" />


                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            }
        </div>
    </div>

    <div>

        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
